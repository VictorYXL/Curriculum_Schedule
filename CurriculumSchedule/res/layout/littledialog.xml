<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="380dp"
    android:paddingLeft="30dip"
    android:paddingTop="10dip">

    <TextView
        android:id="@+id/txt_LittleTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="14dp"
        android:text=" "
        android:gravity="center"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/edt_Time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/edt_Name"
        android:layout_below="@+id/txt_Teacher"
        android:layout_marginTop="16dp"
        android:layout_toRightOf="@+id/txt_Time"
        android:ems="10" />

    <EditText
        android:id="@+id/edt_Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/edt_Classroom"
        android:layout_alignRight="@+id/edt_Classroom"
        android:layout_below="@+id/txt_Time"
        android:layout_marginTop="16dp"
        android:ems="10" />

    <Button
        android:id="@+id/btn_Delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btn_Save"
        android:layout_alignBottom="@+id/btn_Save"
        android:layout_centerHorizontal="true"
        android:text="删除"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btn_Cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btn_Delete"
        android:layout_alignBottom="@+id/btn_Delete"
        android:layout_alignParentRight="true"
        android:layout_marginRight="27dp"
        android:text="取消"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btn_Save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txt_LittleTitle"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="31dp"
        android:text="保存"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/edt_Classroom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/btn_Cancel"
        android:layout_below="@+id/txt_Name"
        android:layout_marginTop="13dp"
        android:layout_toRightOf="@+id/txt_Classroom"
        android:ems="10" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/txt_Time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/edt_Time"
        android:layout_alignBottom="@+id/edt_Time"
        android:layout_toLeftOf="@+id/edt_Classroom"
        android:text="时间"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/txt_Teacher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/edt_Teacher"
        android:layout_alignBottom="@+id/edt_Teacher"
        android:layout_toLeftOf="@+id/edt_Time"
        android:text="老师"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/txt_Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/edt_Name"
        android:layout_alignBottom="@+id/edt_Name"
        android:layout_toLeftOf="@+id/edt_Name"
        android:text="科目"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/txt_Classroom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/edt_Classroom"
        android:layout_alignBottom="@+id/edt_Classroom"
        android:layout_alignLeft="@+id/btn_Save"
        android:text="教室"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/edt_Teacher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/edt_Classroom"
        android:layout_alignRight="@+id/edt_Time"
        android:layout_below="@+id/txt_LittleTitle"
        android:ems="10" />

/>
 
</RelativeLayout>